<Boxlayout>:
    id: my_layout
    orientation: "vertical"
    size: root.width, root.height

    padding: 50
    spacing: 20

    Label:
        id: result_label
        text: ''
        size_hint: .1, .3
        pos_hint: {"center_x": .5}

    Label:
        id: accuracy_label
        text: ''
        size_hint: .1, .1
        pos_hint: {"center_x": .5}

    Label:
        id: filtering_label
        text: ''
        size_hint: .1, .1
        pos_hint: {"center_x": .5}

    Image:
        id: my_image
        source: ''

    Button:
        id: my_button
        text: 'Detect Allergens'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_text:
            self.minimum_width = self.texture_size[0]
            self.minimum_height = self.texture_size[1]
        on_press: app.detect_allergens(self)
        size_hint: .3, None
        height: self.texture_size[1]
        pos_hint: {"center_x": .5}


    FileChooserIconView:
        id: filechooser
        filters: ['*.jpg', '*.jpeg', '*.png']
        on_selection: my_layout.selected(filechooser.selection)
